{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="mb-4 text-center text-primary">
                        <i class="bi bi-pencil-square"></i> Modifier le produit
                    </h2>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control rounded-pill'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price, {'attr': {'class': 'form-control rounded-pill'}}) }}
                                {{ form_errors(form.price) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.stock) }}
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control rounded-pill'}}) }}
                                {{ form_errors(form.stock) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.image) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.category) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.category) }}
                        </div>
                        <button class="btn btn-gradient-primary w-100 mt-3 rounded-pill" style="background: linear-gradient(90deg,#4f8cff,#6ed6ff); border:none;">
                            <i class="bi bi-check-circle"></i> Enregistrer les modifications
                        </button>
                    {{ form_end(form) }}
                    <a href="{{ path('admin_product_index') }}" class="btn btn-link mt-3 w-100">
                        ← Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}